#!/usr/bin/env bash
set -eou pipefail

dir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )" && cd "$dir"

source athena

get_dw_portfolio(){
  psql $aws_db_uri -AF',' -c 'select * from dw.portfolio' | ghead -n -1 >~/Downloads/file.csv
}

upload_portfolio_to_s3(){
  aws s3 cp \
    --profile personal \
    ~/Downloads/file.csv s3://skilbjo-data/datalake/markets-etl/portfolio/file.csv
}

verify_results(){
  query 'select * from dw.portfolio'
}

delete_artifacts(){
  rm ~/Downloads/file.csv
}

get_dw_portfolio \
  && upload_portfolio_to_s3 \
  && verify_results \
  && delete_artifacts
