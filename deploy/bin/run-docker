#!/usr/bin/env bash
set -eou pipefail

dir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
app_name=$(basename $(dirname $(dirname $dir)))
arch=""

cd "${dir}/../.."

case $(uname -a) in
  *amd64* | *x_86* | *x86_64* )
    arch="x86" ;;
  *arm* )
    arch="arm" ;;
esac

img="quay.io/skilbjo/$app_name:$arch"
job_cmd="usr/local/deploy/bin/run-job"

docker run --rm \
  -p 8080:8080 \
  -p 8443:8443 \
  -e ro_db_jdbc_uri="$(echo $ro_db_jdbc_uri)" \
  -e java_key_store="$(echo $java_key_store)" \
  "$img" \
  "$job_cmd" $@
