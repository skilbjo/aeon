#!/usr/bin/env bash
set -eou pipefail

cmd="java $JAVA_OPTS -jar /app.jar"
deploy_dir="usr/local/deploy/bin"

# Prereqs
case $(uname -a) in
  *arm* )
    set +e; eval "${deploy_dir}/apk"; update-ca-certificates; apk fix || echo 'Unable to reach apk...'; set -e; ;; # set +e when apk not available
esac

exec $cmd $@
